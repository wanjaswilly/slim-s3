{% extends "layout.twig" %}
{% block title %}Page Not Found |
	{{ parent() }}
{% endblock %}
{% block content %}
<div class="min-h-screen bg-gradient-to-b from-green-50 to-blue-50 flex items-center">
  <div class="max-w-4xl mx-auto py-16 px-4 sm:px-6 lg:px-8 text-center">
    <!-- Animated 404 Illustration with Sellers App Theme -->
    <div class="relative mx-auto w-64 h-64 mb-8">
      <div class="absolute inset-0 bg-gradient-to-r from-green-400 to-blue-500 rounded-full opacity-20 blur-xl animate-pulse"></div>
      <div class="relative flex items-center justify-center w-full h-full">
        <div class="text-green-500 animate-bounce">
          <svg class="h-48 w-48" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Error Message with Sellers App Branding -->
    <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 mb-4">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-green-600 to-blue-600">404</span>
    </h1>
    <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">Page Not Found</h2>
    <p class="text-lg text-gray-600 max-w-md mx-auto">
      Oops! This page seems to have gone on a delivery run and got lost.
    </p>
    {% if APP_ENVIRONMENT == "DEV" %}
    <p class="mt-2 text-sm text-gray-500 font-mono bg-gray-100 p-2 rounded-md inline-block">
      {{ message }}
    </p>
    {% endif %}

    <!-- Suggested Actions with Business Context -->
    <div class="mt-10 bg-white backdrop-blur-sm rounded-xl shadow-lg overflow-hidden border border-gray-200 max-w-md mx-auto">
      <div class="px-6 py-8">
        <h3 class="text-lg font-medium text-gray-900 mb-4 text-left flex items-center">
          <svg class="h-5 w-5 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          What might have happened?
        </h3>
        <ul class="space-y-3 text-left">
          <li class="flex items-start">
            <svg class="h-5 w-5 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            <span class="text-gray-600">The page has moved or been renamed</span>
          </li>
          <li class="flex items-start">
            <svg class="h-5 w-5 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            <span class="text-gray-600">You typed the address incorrectly</span>
          </li>
          <li class="flex items-start">
            <svg class="h-5 w-5 text-green-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            <span class="text-gray-600">The page no longer exists (like a sold-out product)</span>
          </li>
        </ul>

        <!-- Action Buttons with Sellers App Colors -->
        <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-2">
          <a href="/" class="w-full flex items-center justify-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-gradient-to-r from-green-600 to-blue-600 hover:from-green-700 hover:to-blue-700 transition-all duration-300 transform hover:-translate-y-0.5">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            Go to Homepage
          </a>
          <a href="/contact" class="w-full flex items-center justify-center px-6 py-3 border border-gray-300 rounded-lg shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-300">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Contact Support
          </a>
        </div>
      </div>
    </div>

    <!-- Business-focused Help Section -->
    <div class="mt-8 text-center">
      <p class="text-sm text-gray-500 mb-4">
        Keep selling with Sellers App - Your Digital Business Assistant!
      </p>
      <div class="flex justify-center space-x-6">
        <a href="/products" class="flex items-center text-green-600 hover:text-green-700 transition-colors duration-300">
          <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Add Products
        </a>
        <a href="/sales" class="flex items-center text-green-600 hover:text-green-700 transition-colors duration-300">
          <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          View Sales
        </a>
        <a href="/inventory" class="flex items-center text-green-600 hover:text-green-700 transition-colors duration-300">
          <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
          Check Inventory
        </a>
      </div>
    </div>
  </div>
</div>
{% endblock %}