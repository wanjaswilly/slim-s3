{% extends "layout.twig" %}
{% block title %}Server Error | {{ parent() }}{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-b from-green-50 to-blue-50 flex items-center">
  <div class="max-w-4xl mx-auto py-16 px-4 sm:px-6 lg:px-8 text-center">
    <!-- Animated 500 Illustration with Sellers App Theme -->
    <div class="relative mx-auto w-64 h-64 mb-8">
      <div class="absolute inset-0 bg-gradient-to-r from-yellow-400 to-red-500 rounded-full opacity-20 blur-xl animate-pulse"></div>
      <div class="relative flex items-center justify-center w-full h-full">
        <svg class="h-48 w-48 text-red-500 animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
      </div>
    </div>

    <!-- Error Message -->
    <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 mb-4">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-yellow-500 to-red-600">500</span>
    </h1>
    <h2 class="text-2xl md:text-3xl font-bold text-gray-800 mb-2">System Temporarily Unavailable</h2>
    <p class="text-lg text-gray-600 max-w-md mx-auto">
      Our digital assistant is taking a quick break. We're working to get everything running smoothly again!
    </p>
    {% if APP_ENVIRONMENT == "DEV" %}
    <p class="mt-2 text-sm text-gray-500 font-mono bg-gray-100 p-2 rounded-md inline-block">
      {{ message }}
    </p>
    {% endif %}

    <!-- Suggested Actions -->
    <div class="mt-10 bg-white backdrop-blur-sm rounded-xl shadow-lg overflow-hidden border border-gray-200 max-w-md mx-auto">
      <div class="px-6 py-8">
        <h3 class="text-lg font-medium text-gray-900 mb-4 text-left">What you can do:</h3>
        <ul class="space-y-3 text-left">
          <li class="flex items-start">
            <svg class="h-5 w-5 text-yellow-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            <span class="text-gray-600">Try refreshing the page - sometimes it's just a temporary glitch</span>
          </li>
          <li class="flex items-start">
            <svg class="h-5 w-5 text-yellow-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-gray-600">Check back in a few minutes while we fix things</span>
          </li>
          <li class="flex items-start">
            <svg class="h-5 w-5 text-yellow-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            <span class="text-gray-600">Your business data is safe and will be available shortly</span>
          </li>
        </ul>

        <!-- Notification Banner -->
        <div class="mt-6 bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r-md">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-yellow-700">
                <strong>Don't worry!</strong> Our technical team has been automatically notified and is working on the fix.
              </p>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-2">
          <a href="/" class="w-full flex items-center justify-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-gradient-to-r from-green-600 to-blue-600 hover:from-green-700 hover:to-blue-700 transition-all duration-300 transform hover:-translate-y-0.5">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            Go to Homepage
          </a>
          <a href="/contact" class="w-full flex items-center justify-center px-6 py-3 border border-gray-300 rounded-lg shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-300">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Contact Support
          </a>
        </div>
      </div>
    </div>

    <!-- Business Continuity Message -->
    <div class="mt-8 text-center">
      <div class="bg-green-50 border border-green-200 rounded-lg p-4 inline-block">
        <p class="text-sm text-green-700">
          <strong>Business Continuity:</strong> Your sales data and inventory are securely backed up and will be restored once the system is back online.
        </p>
      </div>
      <p class="text-sm text-gray-500 mt-4">
        Need immediate assistance? Call us at <a href="tel:+254712345678" class="font-medium text-green-600 hover:underline">+254 712 345 678</a>
      </p>
    </div>
  </div>
</div>
{% endblock %}